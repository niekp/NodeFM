// shared::progress
if (value && total)
    - var percentage = Math.round(value/total*100)

    .progress
        .progress-bar(
            class="w-" + percentage,
            role="progressbar",
            aria-valuenow=percentage,
            aria-valuemin="0" ,
            aria-valuemax="100",
            style="width:" + percentage + "%"
        )
            | #{value}
else
    | #{value}