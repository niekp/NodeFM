// nav::root
block nav
  - var active = (menu ? menu : "index")

if loggedIn
    ul.nav.nav-sidebar
        li(class=(active === "recent" ? "active" : undefined))
            a(href='/stats') Recent tracks 
        li(class=(active.substr(0, 4) === 'top-' ? "active" : undefined))
            a(href='/stats/artists') Top scrobbles
        li(class=(active.indexOf('discoveries') >= 0 ? "active" : undefined))
            a(href='/stats/artist-discoveries') Top discoveries
        li(class=(active.substr(0, 13) === "scrobbles-per" ? "active" : undefined))
            a(href='/stats/scrobbles-per-hour') Scrobbles per hour
        